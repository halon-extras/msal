{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "tenants"
    ],
    "properties": {
        "tenants": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "uniqueItems": true,
                "required": [
                    "id",
                    "type",
                    "cache_file",
                    "client_id",
                    "authority",
                    "scopes"
                ],
                "if": {
                    "properties": { "type": { "const": "public" } }
                },
                "then": {
                    "not": {
                        "required": ["client_secret"]
                    }
                },
                "else": {
                    "required": ["client_secret"]
                },
                "properties": {
                    "id": {
                        "type": "string",
                        "minLength": 1
                    },
                    "type": {
                        "type": "string",
                        "enum": ["public", "confidential"]
                    },
                    "client_secret": {
                        "type": "string",
                        "minLength": 1
                    },
                    "cache_file": {
                        "type": "string",
                        "minLength": 1
                    },
                    "client_id": {
                        "type": "string",
                        "minLength": 1
                    },
                    "authority": {
                        "type": "string",
                        "minLength": 1
                    },
                    "scopes": {
                        "type": "array",
                        "uniqueItems": true,
                        "minItems": 1,
                        "items": {
                            "type": "string",
                            "minLength": 1
                        }
                    }
                }
            }
        }
    }
}
