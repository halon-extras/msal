{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "tenants"
    ],
    "properties": {
        "tenants": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "uniqueItems": true,
                "required": [
                    "id",
                    "cache_file",
                    "client_id",
                    "authority",
                    "scopes"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "minLength": 1
                    },
                    "cache_file": {
                        "type": "string",
                        "minLength": 1
                    },
                    "client_id": {
                        "type": "string",
                        "minLength": 1
                    },
                    "authority": {
                        "type": "string",
                        "minLength": 1
                    },
                    "scopes": {
                        "type": "array",
                        "uniqueItems": true,
                        "minItems": 1,
                        "items": {
                            "type": "string",
                            "minLength": 1
                        }
                    }
                }
            }
        }
    }
}
